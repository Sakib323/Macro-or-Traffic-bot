<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@null">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        app:cardBackgroundColor="#090909"
        app:cardCornerRadius="10dp"
        android:layout_height="250dp">
        <TextView
            android:id="@+id/text"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:padding="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="if u want to quit here then provide something to search in this app with 5 keyword"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="170dp"
            android:id="@+id/bothcard"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_gravity="left"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/stay"
                app:cardBackgroundColor="#44F803"
                app:cardCornerRadius="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/onlyline"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:text="Search here">
                </TextView>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/quit"
                android:layout_toRightOf="@id/stay"
                app:cardBackgroundColor="#F81605"
                android:layout_marginLeft="50dp"
                app:cardCornerRadius="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:text="Stay">
                </TextView>


            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>





</RelativeLayout>